# ==========================================
# 1. 硬件与目标机型设置 (Redmi AX6000)
# ==========================================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_xiaomi_redmi-router-ax6000=y

# ==========================================
# 2. 闭源 Wi-Fi 驱动 (237源码核心必选)
# ==========================================
CONFIG_PACKAGE_luci-app-mtwifi=y
CONFIG_PACKAGE_mtwifi-cfg=y
CONFIG_PACKAGE_kmod-mt7986-firmware-mtwifi=y
# 显式禁用开源驱动，防止冲突
# CONFIG_PACKAGE_kmod-mt7986-firmware is not set
# CONFIG_PACKAGE_kmod-mt76-connac is not set

# ==========================================
# 3. 基础系统与 LuCI 设置
# ==========================================
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-firewall=y

# 主题 (保留 Argon 和默认 Bootstrap)
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-app-argon-config=y

# 常用系统工具 (防止编译报错或调试用)
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_htop=y

# ==========================================
# 4. Passwall 专用设置 (全能版)
# ==========================================
# 启用 Passwall 主程序
CONFIG_PACKAGE_luci-app-passwall=y

# 启用核心组件 (支持 VLESS, VMess, Hysteria2, Reality 等协议)
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Xray=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_SingBox=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Hysteria=y

# 启用传统协议库 (SS/SSR/Trojan)
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Trojan_Plus=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Simple_Obfs=y

# ==========================================
# 5. 明确禁用其他插件 (根据你的要求清理)
# ==========================================
# CONFIG_PACKAGE_luci-app-nekobox is not set
# CONFIG_PACKAGE_luci-app-openclash is not set
